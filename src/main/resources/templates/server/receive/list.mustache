		  	    $.each(data.content, function (idx, el) {
					insertTr += '<tr>';
					insertTr += '	<td>'+el.no+'</td>';
					insertTr += '	<td>'+el.clct_csv_file+'</td>';
					insertTr += '</tr>';
		  	    });
			  	    
 	    	}
 	    	$("#csvList").html(insertTr);
 	    	
		}
	  	  
	  	detailModal();
	  	
    }).fail(function (error) {
        alert(JSON.stringify(error));
    });	
}

