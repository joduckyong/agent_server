<script>
const url = '/server/receive';

let init_page = 1;				//초기 페이지
let page = 1;					//페이지
let init_size_per_page = 10;	//초기 개수
let size_per_page = 10;	 		//가져올 개수
let pageCount = 10;		 		//페이징에 나타낼 페이지 수

//데이터 수신 zip파일 목록 조회
const agentRecvZipList = function(page, size_per_page){
	
	let query = $('#query').val();
	
	if(!page){
		page = init_page;
	}
	
	if(!size_per_page){
		size_per_page = init_size_per_page;
	}	
	
	const data = {
   		url: '/recv/list',
   		user_id: 'user00',
   		page_current: page,
   		amount: size_per_page,
   		local_gov_nm: query,
    };	
	
    $.ajax({
        type: 'POST',
        url: url+'/agentRecvZipList',
        dataType: 'json',
        contentType: 'application/json; charset=utf-8',
        data: JSON.stringify(data)
    }).done(function (data) {
    	
	  	  if (data != null) {
	  		$("#zipList").empty();
 	    	$("#total_count").text(data.total_count);
 	    	
 	    	let insertTr = '';
 	    	if(data.content != ""){
	 	    	console.log(data);
		  	    $.each(data.content, function (idx, el) {
		  	    	let file_name = el.trf_zip_file;
		  	    	let transmission_date = file_name.substring(0,4) + '-' + file_name.substring(4,6) + '-' +file_name.substring(6,8) + ' ' + file_name.substring(9,11) + ':' + file_name.substring(11,13) + ':' + file_name.substring(13,15);
					insertTr += '<tr>';
					insertTr += '	<td>'+(idx+1)+'</td>';
					insertTr += '	<td>'+isEmpty(el.local_gov_nm)+'</td>';
					insertTr += '	<td>'+transmission_date+'</td>';
					insertTr += ' 	<td>';
					insertTr += '		<ol><li><a class="btn btn-dark btn-sm mx-0" href="#" onclick="agentRecvCsvList(\''+el.trf_zip_file+'\');">파일목록</a></li></ol>';
					insertTr += '	</td>';
					insertTr += '	<td>'+el.clct_csv_file_num+'</td>';
					insertTr += '</tr>';
		  	    });
 	    	}
 	    	
 	    	$("#zipList").html(insertTr);
 	    	
  	    	//페이징 보여줌
  	    	paging(data.total_count, size_per_page, pageCount, page);
		}
    	  
    }).fail(function (error) {
        alert(JSON.stringify(error));
    });	
}

